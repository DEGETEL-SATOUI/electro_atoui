{% extends "FrontendBundle:Default:account.html.twig" %}

{% block titre %}Electro El Atoui - Modifier mon mot de passe{% endblock %}

{% block location %}
<ul class="breadcrumb">
  <li><a href="{{ path('_frontend_homepage') }}"><i class="fa fa-home"></i></a></li>
  <li><a href="{{ path('_user_account') }}"><span>Mon compte</span></a></li>
  <li><span>Modifier mon profil</span></li>
</ul>
{% endblock %}


{% block body %}
<h1>Mon compte</h1>

{% for flashMessage in app.session.flashbag.get('success') %}
    <div class="alert alert-success">
        {{ flashMessage }}
        <button type="button" class="close" data-dismiss="alert">×</button>
    </div>
{% endfor %}

<form action="{{ path('_user_profile') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    <fieldset>
        <legend>Mes informations personnelles</legend>
        <div class="form-group required">
            <label class="col-sm-2 control-label">Affixe</label>
            <div class="col-sm-9">
                {{ form_widget(form.gender, {'label_attr': {'class': 'radio-inline'}}) }}
                {% if form_errors(form.gender) %}
                  <div class="text-danger">{{ form_errors(form.gender) }}</div>
                {% endif %}
            </div>
        </div>
        <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-firstname">Nom </label>
            <div class="col-sm-9">
                {{ form_widget(form.first_name, {'label_attr': {'class': 'radio-inline'}}) }}
                {% if form_errors(form.first_name) %}
                  <div class="text-danger">{{ form_errors(form.first_name) }}</div>
                {% endif %}
            </div>
        </div>
        <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-lastname">Prénom </label>
            <div class="col-sm-9">
                {{ form_widget(form.last_name, {'label_attr': {'class': 'radio-inline'}}) }}
                {% if form_errors(form.last_name) %}
                  <div class="text-danger">{{ form_errors(form.last_name) }}</div>
                {% endif %}
            </div>
        </div>
        <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-telephone">Téléphone</label>
            <div class="col-sm-9">
                {{ form_widget(form.phone, {'label_attr': {'class': 'radio-inline'}}) }}
                {% if form_errors(form.phone) %}
                  <div class="text-danger">{{ form_errors(form.phone) }}</div>
                {% endif %}
            </div>
        </div>
        <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-address-1">Adresse</label>
                <div class="col-sm-9">
                    {{ form_widget(form.address) }}
                    {% if form_errors(form.address) %}
                      <div class="text-danger">{{ form_errors(form.address) }}</div>
                    {% endif %}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-address-2">Complément Adresse</label>
                <div class="col-sm-9">
                    {{ form_widget(form.address_complement) }}
                    {% if form_errors(form.address_complement) %}
                      <div class="text-danger">{{ form_errors(form.address_complement) }}</div>
                    {% endif %}
                </div>
            </div>
            <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-city">Ville</label>
                <div class="col-sm-9">
                    {{ form_widget(form.city) }}
                    {% if form_errors(form.city) %}
                      <div class="text-danger">{{ form_errors(form.city) }}</div>
                    {% endif %}
                </div>
            </div>
            <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-postcode">Code Postal</label>
                <div class="col-sm-9">
                    {{ form_widget(form.zip_code, {'attr': {'placeholder': '0000'}}) }}
                    {% if form_errors(form.zip_code) %}
                      <div class="text-danger">{{ form_errors(form.zip_code) }}</div>
                    {% endif %}
                </div>
            </div>
            {{ form_rest(form) }}
    </fieldset>
    <div class="buttons clearfix">
        <div class="pull-right">
            <input type="submit" value="Enregistrer" class="btn btn-primary">
        </div>
    </div>
</form>
{% endblock %}
