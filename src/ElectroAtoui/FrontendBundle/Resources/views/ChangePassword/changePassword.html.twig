{% extends "FrontendBundle:Default:account.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block titre %}Electro El Atoui - Modifier mon mot de passe{% endblock %}

{% block location %}
<ul class="breadcrumb">
  <li><a href="{{ path('_backend_homepage') }}"><i class="fa fa-home"></i></a></li>
  <li><a href="{{ path('_user_account') }}"><span>Mon compte</span></a></li>
  <li><span>Changer mon mot de passe</span></li>
</ul>
{% endblock %}


{% block body %}
    <h1>Modifier mon mot de passe</h1>

    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            {{ flashMessage }}
            <button type="button" class="close" data-dismiss="alert">×</button>
        </div>
    {% endfor %}

    {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'form-horizontal' } }) }}
      <fieldset>
        <div class="form-group required">
            <label class="col-sm-3 control-label">Mot de passe actuel</label>
            <div class="col-sm-9">
                {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
                {% if form_errors(form.current_password) %}
                  <div class="text-danger">{{ form_errors(form.current_password) }}</div>
                {% endif %}
            </div>
        </div>
        <div class="form-group required">
            <label class="col-sm-3 control-label">Nouveau mot de passe</label>
            <div class="col-sm-9">
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                {% if form_errors(form.plainPassword.first) %}
                  <div class="text-danger">{{ form_errors(form.plainPassword.first) }}</div>
                {% endif %}
            </div>
        </div>
        <div class="form-group required">
            <label class="col-sm-3 control-label">Vérification</label>
            <div class="col-sm-9">
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                {% if form_errors(form.plainPassword.second) %}
                  <div class="text-danger">{{ form_errors(form.plainPassword.second) }}</div>
                {% endif %}
            </div>
        </div>
        <div class="form-group">
            {{ form_rest(form) }}
        </div>
        <div class="buttons">
            <div class="pull-right">
                <input class="btn btn-primary" type="submit" value="{{ 'change_password.submit'|trans }}">
            </div>
        </div>
      </fieldset>
    {{ form_end(form) }}
{% endblock %}
